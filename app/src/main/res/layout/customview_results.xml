<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdulsamad.dictionaryapp.Result">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word:"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:id="@+id/worttxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definations:"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="50dp"
        android:id="@+id/meaningtxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/meaningtxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/word"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meaning of thw rod that can show its defination and detailed meaning as well"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/word"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:id="@+id/meaning"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/meaningtxt"
        android:layout_marginLeft="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/meaning"
        ></View>
</RelativeLayout>